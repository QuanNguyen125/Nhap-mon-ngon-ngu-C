#include <stdio.h>

int main(void) {
  int h;
  //h = 4
  //hàng1:1 ngôi sao;3 khoảng trống//
  //hàng2:3 ngôi sao;3 khoảng trống//
  //hàng3:5 ngôi sao;1 khoảng trống//
  //hàng4:7 ngôi sao;0 khoảng trống//
  //h = 3
  //hàng1:3 ngôi sao;2 khoảng trống//
  //hàng2:5 ngôi sao;1 khoảng trống//
  //hàng3:7 ngôi sao;0 khoảng trống//
  //h = 2
  //hàng1:5 ngôi sao;1 khoảng trống//
  //hàng2:7 ngôi sao;0 khoảng trống//
  //h = 1 
  //hàng1:7 ngôi sao;0 khoảng trống//

  for(int i = 1;i == h;i++){
    //in ra h - i khoang trang//
    for(int j = 1; j <= h;j++){
      printf("");
    }
    //in ra 2 s * i -1 sao//
  }
  for(int j = 1; j <= 10; j++){
    printf(""); 
  }
  printf("\n");
  return 0;
  
}
